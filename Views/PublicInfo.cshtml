@model Nop.Plugin.Widgets.HeaderSliderPlugin.Models.PublicInfoModel
@{
    Layout = "";
}

<link rel="stylesheet" href="~/Plugins/Widgets.HeaderSliderPlugin/Content/css/style.css" />

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="headerSlider">
    @{
        var dataSlide1 = new ViewDataDictionary(ViewData)
    {
    {"title", Model.Title},
    {"id", Model.Id},
    {"startdate", Model.StartDate},
    {"enddate", Model.EndDate},
    {"isdisabled", Model.IsDisabled},
    {"fontsize", Model.FontSize},
    {"fontfamily", Model.FontFamily},
    {"fontcolor", Model.FontColor},
    {"widgetheight", Model.WidgetHeight},
    {"zone", Model.Zone},
    {"backgroundcolor", Model.BackgroundColor},
    {"animationtime", Model.AnimationTime}


    };
        @await Html.PartialAsync("~/Plugins/Widgets.HeaderSliderPlugin/Views/_PublicInfo.SliderLine.cshtml", dataSlide1)


    }

</div>


